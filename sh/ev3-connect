}

driver()
{
	scp "../Driver-EV3-UnitTest/Debug/Driver-EV3-UnitTest" robot@$IP:/home/robot/	
}

recup()
{
        scp "robot@$IP:/home/robot/*.csv /home/robot/*.svg" /home/pmx/recup/.
}

wifi()
{
	ssh robot@$IP
}

usb()
{
	ssh robot@$IPUSB
}


case "$1" in
	view-doc)
		view_doc;;
	all)
		all;;
	driver)
		driver;;
	main)
		main;;
	recup)
		recup;;
	wifi)
		wifi;;
	usb)
		usb;;

	*)
		echo "Usage: $0 {wifi|usb|all|main|driver|recup}" >&2
		exit 1
