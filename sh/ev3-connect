#! /bin/bash

#Se connecter une premiÃ¨re fois avec ssh robot@[IP] pour enregistrer le mot de passe de la connexion ssh.

IPUSB="10.42.0.71" #USB
IP="192.168.2.102" #WIFI

all()
{
    #ssh root@$IP "killall Bot-SmallPMX-EV3"
	scp "../Bot_Mindstorm_EV3/Release/Bot_LegoMindstorm_EV3" "../Driver-EV3-UnitTest/Debug/Driver-EV3-UnitTest" robot@$IP:/home/robot/
	
}

main()
{
	scp "../Bot_Mindstorm_EV3/Release/Bot_LegoMindstorm_EV3" robot@$IP:/home/robot/	
}

driver()
{
	scp "../Driver-EV3-UnitTest/Debug/Driver-EV3-UnitTest" robot@$IP:/home/robot/	
}


wifi()
{
	ssh robot@$IP
}

usb()
{
	ssh robot@$IPUSB
}


case "$1" in
	view-doc)
		view_doc;;
	all)
		all;;
	driver)
		driver;;
	main)
		main;;
	
	wifi)
		wifi;;
	usb)
		usb;;

	*)
		echo "Usage: $0 {wifi|usb|all|main|driver}" >&2
		exit 1
	;;
esac

exit 0
